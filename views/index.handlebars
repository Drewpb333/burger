<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h2>Eat-Da-Burger!</h2>
        </div>
        <div class="col-md-4"></div>
    </div>

    <div class="row">
        {{!-- for burgers that have just been added --}}
        <div class="col-md-3"></div>
        <div class="col-md-3">
            <ul>
                {{#each burger}} {{#unless devoured}} {{> cats/cat-block sleep=true}} {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-md-3">
            {{!-- for burger that have been eaten --}}
            <ul>
                {{#each burger}} {{#if devoured}} {{> cats/cat-block sleep=false}} {{/if}} {{/each}}
            </ul>
        </div>
        <div class="col-md-3"></div>
    </div>

    <br>
    <br> {{!-- burger input form --}}
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form>
                <div class="form-group">
                    <input type="text" id="new-burger">
                </div>

                <button type="submit" class="btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>